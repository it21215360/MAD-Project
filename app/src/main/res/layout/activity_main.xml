<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/vehicleType"
        android:layout_width="333dp"
        android:layout_height="178dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:text="Grab Your Keys, And Lets Roam Around Sri-Lanka With Us"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/car"
        android:layout_width="340dp"
        android:layout_height="59dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#763BDF"
        android:text="CAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vehicleType"
        app:layout_constraintTop_toBottomOf="@+id/vehicleType" />

    <Button
        android:id="@+id/van"
        android:layout_width="341dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#763BDF"
        android:text="VAN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car" />

</androidx.constraintlayout.widget.ConstraintLayout>