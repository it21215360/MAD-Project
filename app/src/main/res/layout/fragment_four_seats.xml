<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4A7CD5"
    android:backgroundTint="#80000000"
    tools:context=".FourSeats">

    <ImageView
        android:id="@+id/carimg1"
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/mercedes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/car1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="43dp"
        android:text="Mercedes A200"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/carimg1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/featureList1"
        android:layout_width="147dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="59dp"
        android:text="* A/C        *Leather Seats"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carimg1"
        app:layout_constraintTop_toBottomOf="@+id/car1" />

    <TextView
        android:id="@+id/featureList2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="* ConvertableRoof        *Heater"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carimg1"
        app:layout_constraintTop_toBottomOf="@+id/featureList1" />

    <TextView
        android:id="@+id/Price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="105dp"
        android:text="Rs 44,000/="
        android:textColor="#D30202"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carimg1"
        app:layout_constraintTop_toBottomOf="@+id/featureList2" />

    <Button
        android:id="@+id/reservebtn1"
        android:layout_width="336dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="8dp"
        android:text="Reserve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/car2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="284dp"
        android:text="AudiA4 White"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/carimg1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/featureList3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="104dp"
        android:text="* A/C        *Heater"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carimg2"
        app:layout_constraintTop_toBottomOf="@+id/car1" />

    <TextView
        android:id="@+id/featureList4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="72dp"
        android:text="* ConvertableRoof        "
        android:textColor="#FFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carimg2"
        app:layout_constraintTop_toBottomOf="@+id/featureList1" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="104dp"
        android:text="Rs 40,000/="
        android:textColor="#D30202"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/featureList2" />

    <Button
        android:id="@+id/reservebtn2"
        android:layout_width="322dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="8dp"
        android:text="Reserve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/carimg2"
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/audi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservebtn1" />

</androidx.constraintlayout.widget.ConstraintLayout>