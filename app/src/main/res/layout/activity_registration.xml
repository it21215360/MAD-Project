<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@drawable/signup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="381dp"
        android:layout_height="580dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="25dp"
        android:background="#380BD8"
        android:backgroundTint="#A436426E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginTop="24dp"
            android:text="Sign Up"
            android:textColor="#F3EDED"
            android:textColorHint="#FFFFFF"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/getUsername"
            android:layout_width="251dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="26dp"
            android:backgroundTint="#F8F6F6"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="User Name"
            android:textColor="#FBFBFB"
            android:textColorHint="#F4F4F4"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/getEmail"
            android:layout_width="251dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="26dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:textColor="#FDFDFD"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getUsername" />

        <EditText
            android:id="@+id/getPassword"
            android:layout_width="251dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="26dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Password"
            android:textColor="#EDE9E9"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getEmail" />

        <EditText
            android:id="@+id/confirmPass"
            android:layout_width="251dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="26dp"
            android:backgroundTint="#F8F6F6"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Confirm Password"
            android:textColor="#F3F3F3"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getPassword" />

        <Button
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="144dp"
            android:layout_marginBottom="61dp"
            android:text="SIGN UP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>