<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic5"
    tools:context=".Userpage_S">



    <LinearLayout
        android:id="@+id/ml1"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@color/btnblue"
            android:text="My Schedules"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintVertical_bias="0.112" />
        <Button
            android:id="@+id/viewbtn"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:onClick="buttonSaveEvent"
            android:backgroundTint="@color/black"
            app:circularflow_radiusInDP="10dp"
            android:alpha="0.7"
            android:textSize="16sp"
            android:text="View Schedules"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ml1"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:alpha="0.8"
            android:background="@color/ashgreen">

            <ImageView
                android:id="@+id/homebtn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:contentDescription="@string/title1"
                app:srcCompat="@drawable/baseline_home_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@color/ashgreen">

            <ImageView
                android:id="@+id/searchbtn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_search_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@color/ashgreen">

            <ImageView
                android:id="@+id/calbtn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_calendar_month_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/ashgreen"
            android:layout_marginEnd="3dp"
            android:alpha="0.8">

            <ImageView
                android:id="@+id/upgbtn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_account_circle_24" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>