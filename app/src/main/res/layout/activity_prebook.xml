<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/preebook"
    tools:context=".Prebook">

    <TextView
        android:id="@+id/back_view"
        android:layout_width="405dp"
        android:layout_height="730dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:background="#80DDDFDC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_text_prebook"
        android:layout_width="333dp"
        android:layout_height="257dp"
        android:layout_marginTop="269dp"
        android:layout_marginBottom="205dp"
        android:background="#5B357016"
        android:paddingLeft="20sp"
        android:text="PRE BOOK YOUR SAFARI"
        android:textColor="#072E04"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_prebook"
        android:layout_width="182dp"
        android:layout_height="57dp"
        android:layout_marginTop="431dp"
        android:layout_marginBottom="243dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>