<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic6"
    tools:context=".Search_S">



    <LinearLayout
        android:id="@+id/lt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/heading"
            android:elevation="12dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:background="@color/white"
            android:alpha="0.9"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <SearchView
        android:id="@+id/searchW1"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:autofillHints="Find Restaurants"
        android:queryHint="Find Restaurants"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lt1" />

    <Button
        android:id="@+id/star5"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/star5"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchW1"
        tools:ignore="VisualLintButtonSize,TextSizeCheck" />


    <Button
        android:id="@+id/star4"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/star4"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star5"
        tools:ignore="VisualLintButtonSize,TextSizeCheck" />

    <Button
        android:id="@+id/star3"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/star3"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star4"
        tools:ignore="VisualLintButtonSize,TextSizeCheck" />

    <Button
        android:id="@+id/colombo"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/colombo"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star3"
        tools:ignore="VisualLintButtonSize,TextSizeCheck" />



    <LinearLayout
        android:id="@+id/nvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/colombo"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:alpha="0.8"
            android:background="@color/ashgreen">

            <ImageView
                android:id="@+id/homebtn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:contentDescription="@string/title1"
                app:srcCompat="@drawable/baseline_home_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@color/ashgreen">

            <ImageView
                android:id="@+id/searchbtn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_search_24"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@color/ashgreen">

            <ImageView
                android:id="@+id/calbtn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_calendar_month_24"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/ashgreen"
            android:layout_marginEnd="3dp"
            android:alpha="0.8">

            <ImageView
                android:id="@+id/upgbtn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_account_circle_24"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>