    tools:context=".Main">

    <TextView
        android:id="@+id/texthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="@string/home"
        android:textColor="@color/black"
        android:textSize="120px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/arrowimg" />

    <ImageView
        android:id="@+id/arrowimg"
        android:layout_width="54dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />

    <Button
        android:id="@+id/btn_luxury"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"
        android:text="@string/luxury_hotel"
        app:layout_constraintEnd_toStartOf="@+id/btn_villa"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texthome" />

    <Button
        android:id="@+id/btn_villa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="56dp"
        android:text="@string/boutique_villa"
        app:layout_constraintBottom_toTopOf="@+id/btn_5star"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btn_resort"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="@string/resort"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_luxury" />

    <Button
        android:id="@+id/btn_5star"
        android:layout_width="157dp"
        android:layout_height="48dp"

        android:layout_marginTop="56dp"
        android:text="@string/_4_star_hotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
